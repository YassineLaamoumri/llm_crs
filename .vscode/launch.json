{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Module",
            "type": "debugpy",
            "request": "launch",
            "module": "src.audio_processing.transcribe"
        },
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
